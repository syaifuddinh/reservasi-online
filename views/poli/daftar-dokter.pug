extends ../dashboard

block top-functions
	script
		|	function entryFormReservation(idPoli, idDokter) {
		|		location.href = `/form-reservasi/${idPoli}/${idDokter}`
		|	}

block content
	.limiter
		.container-table100
			.wrap-table100
				.table100.ver3.m-b-110
					table(data-vertable='ver3')
						thead
							tr.row100.head
								th.column100.column1(data-column='column1') #
								th.column100.column2(data-column='column2') Nama Dokter
								th.column100.column3(data-column='column3') Jumlah Antrian

						tbody
						each val, index in daftarDokter
							tr.row100(onclick=`entryFormReservation(${idPoli}, ${val.idDokter})`)
								td.column100.column1(data-column='column1') #{index + 1}
								td.column100.column2(data-column='column2') #{val.namaDokter}
								td.column100.column3(data-column='column3') #{val.jumlahAntrian}